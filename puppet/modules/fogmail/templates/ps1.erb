if [ `id -u` -eq 0 ]; then
  umask 022
  export PS1='\[\033[31m\]\u@\h<% if @line %> (<%= @line %>)<% end -%>:\w\[\033[39m\]\$ '
  export PATH="/usr/local/bin:/usr/local/sbin:/usr/bin:/usr/sbin:/bin:/sbin:/usr/bin/X11:/usr/games"
else
  <% if @line %>
  export PS1='\[\033[01;32m\]\u@\h (<%= @line %>)\[\033[00m\]:\[\033[01;34m\]\w\[\033[00m\]\$ '
  <% else %>
  export PS1='\[\033[01;32m\]\u@\h\[\033[00m\]:\[\033[01;34m\]\w\[\033[00m\]\$ '
  <% end %>
fi
